<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:srcCompat="@drawable/gtu_logo_tr_500" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textMultiLine|textImeMultiLine"
        android:text="REDSTONE"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:text="Connect" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sampling"
        android:textOff="Sampling"
        android:textOn="Test" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <RadioButton
            android:id="@+id/rbClassic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classic" />

        <RadioButton
            android:id="@+id/rbElectro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electro" />

        <RadioButton
            android:id="@+id/rbJazz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jazz" />

        <RadioButton
            android:id="@+id/rbRock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock" />

        <RadioButton
            android:id="@+id/rbPop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pop" />

        <RadioButton
            android:id="@+id/rbHiphop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="HipHop" />

    </RadioGroup>

</LinearLayout>